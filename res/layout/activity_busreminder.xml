<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@drawable/bg2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/nowlocat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/i_am_here" 
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/cityshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="城市的" 
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/busNumber"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.62"
            android:ems="10"
            android:hint="例如119" 
            android:textSize="20sp"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/road"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/lu" 
            android:textSize="20sp"/>

    </LinearLayout>

    <AbsoluteLayout
        android:layout_width="fill_parent"
        android:layout_height="240dp" >

        <Button
            android:id="@+id/nowcity"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_x="10dp"
            android:layout_y="0dp"
            android:text="定位当前城市" 
            android:background="@drawable/button"/>

        <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="5dp"
            android:layout_y="67dp"
            android:text="起始："
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fromshow"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_x="60dp"
            android:layout_y="65dp"
            android:textSize="20sp"
            android:text="     " />

        <TextView
            android:id="@+id/willgo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="5dp"
            android:layout_y="115dp"
            android:text="目的："
            android:textSize="20sp" />

        <TextView
            android:id="@+id/destshow"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_x="60dp"
            android:layout_y="115dp"
            android:textSize="20sp"
            android:text="      " />

		<Button
            android:id="@+id/chooseFrom"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_x="180dp"
            android:layout_y="55dp"
            android:text="选择起始站" 
            android:background="@drawable/button"/>
        <Button
            android:id="@+id/chooseDestination"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_x="180dp"
            android:layout_y="105dp"
            android:text="选择目的站" 
            android:background="@drawable/button"/>

        

        <Button
            android:id="@+id/start"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_x="30dp"
            android:layout_y="190dp"
            android:text="开始提醒" 
            android:background="@drawable/button"/>
        <Button
            android:id="@+id/stopRemind"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_x="160dp"
            android:layout_y="190dp"
            android:text="停止响铃" 
            android:background="@drawable/button"/>
        <TextView
	        android:id="@+id/setLimit"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_x="5dp"
            android:layout_y="160dp"
	        android:text="提前站数提醒（默认2站）：" 
	        android:textSize="20sp"/>
        <EditText
            android:id="@+id/limitsValue"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_x="260dp"
            android:layout_y="160dp"
            android:ems="10"
            android:hint="2" 
            android:textSize="20sp"
            android:background="@android:color/transparent"/>
    </AbsoluteLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

	    <TextView
	        android:id="@+id/nowStation"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.03"
	        android:text="当前位置站：" 
	        android:textSize="20sp"/>

	    <TextView
	        android:id="@+id/nowStationName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.26"
	        android:textSize="20sp" 
	        android:text=" " />

	</LinearLayout>

	<TextView
	    android:id="@+id/textView1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="定位显示"
	    android:textSize="20sp" />

</LinearLayout>